<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/head') -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/nav') -%>
        <!-- Page Header-->
        <%- include('layouts/header') -%>
        <!-- Background-->
        <%- include('layouts/land') -%>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="my-5">
                            <form action="/api/connexion/signin" method="POST">
                                <div class="form-floating">
                                    <input class="form-control" id="username" name="username" type="text" placeholder="Enter the post title..."  />
                                    <label for="title">Username</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="pwd" name="pwd" type="password" placeholder="Enter the post title..."  />
                                    <label for="title">Password</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="confPwd" name="confPwd" type="password" placeholder="Enter the post title..."  />
                                    <label for="title">Confirm Password</label>
                                </div>
                                <br />
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">S'inscrire</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        <%- include('layouts/footer') -%>
        <%- include('layouts/scripts') -%>
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    </body>
</html>
